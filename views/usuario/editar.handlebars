<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title">Alterar Senha</h5>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>

            <form action="/usuario/editar" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="novaSenha" class="form-label">Nova Senha</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key"></i>
                            </span>
                            <input type="password" class="form-control" name="novaSenha" id="novaSenha" required
                                minlength="8" placeholder="Digite sua nova senha" autocomplete="new-password">
                        </div>
                        <div class="form-text">
                            A senha deve ter no m√≠nimo 8 caracteres
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="novaSenhaRepetida" class="form-label">Confirmar Nova Senha</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key-fill"></i>
                            </span>
                            <input type="password" class="form-control" name="novaSenhaRepetida" id="novaSenhaRepetida"
                                required minlength="8" placeholder="Confirme sua nova senha"
                                autocomplete="new-password">
                        </div>
                    </div>
                </div>

                <input type="hidden" name="id" value="{{usuario.id}}">

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Salvar Nova Senha
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>