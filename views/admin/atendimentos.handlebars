<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title">Lista de Atendimentos</h5>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" style="max-width: 1200px; margin: 0 auto;">
                    <thead>
                        <tr>
                            <th scope="col">#ID</th>
                            <th scope="col">Resumo</th>
                            <th scope="col">Status</th>
                            <th scope="col">Chamado</th>
                            <th scope="col">Técnico</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each atendimentos}}
                        <tr>
                            <td>{{id}}</td>
                            <td>
                                <span class="text-truncate d-inline-block" style="max-width: 300px;" title="{{resumo}}">
                                    <i class="bi bi-file-text text-primary me-2"></i>
                                    {{resumo}}
                                </span>
                            </td>
                            <td>
                                <span>
                                    {{status}}
                                </span>
                            </td>
                            <td>
                                <a href="/chamados/visualizar/{{chamado_id}}" class="text-decoration-none">
                                    <span class="badge bg-primary">
                                        <i class="bi bi-ticket me-1"></i>
                                        #{{chamado_id}}
                                    </span>
                                </a>
                            </td>
                            <td>
                                <a href="/tecnicos/visualizar/{{tecnico_id}}" class="text-decoration-none">
                                    <span class="badge bg-info text-dark">
                                        <i class="bi bi-person-badge me-1"></i>
                                        #{{tecnico_id}}
                                    </span>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{#unless atendimentos.length}}
            <div class="text-center py-5">
                <i class="bi bi-headset text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Nenhum atendimento encontrado</h5>
                <p class="text-muted mb-0">Não há atendimentos registrados no momento.</p>
            </div>
            {{/unless}}
        </div>
    </div>
</div>