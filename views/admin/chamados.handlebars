<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title">Lista de Chamados</h5>
                <div>
                    <a href="/" class="btn btn-outline-secondary back-button">Voltar</a>
                    <a href="/chamados/cadastro" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>Novo Chamado
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" style="max-width: 1200px; margin: 0 auto;">
                    <thead>
                        <tr>
                            <th scope="col">#ID</th>
                            <th scope="col">Título</th>
                            <th scope="col">Descrição</th>
                            <th scope="col">Status</th>
                            <th scope="col">Cliente</th>
                            <th scope="col" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each infos}}
                        <tr>
                            <td>{{id}}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-ticket text-primary me-2"></i>
                                    {{titulo}}
                                </div>
                            </td>
                            <td>
                                <span class="text-truncate d-inline-block" style="max-width: 200px;"
                                    title="{{descricao}}">
                                    {{descricao}}
                                </span>
                            </td>
                            <td>
                                <span>
                                    {{status}}
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person text-muted me-2"></i>
                                    {{cliente.email}}
                                </div>
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="/chamados/editar/{{id}}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil me-2"></i>Editar
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{id}}">
                                        <i class="bi bi-trash me-2"></i>Excluir
                                    </button>
                                </div>

                                <div class="modal fade" id="deleteModal{{id}}" tabindex="-1"
                                    aria-labelledby="deleteModalLabel{{id}}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{id}}">Confirmar Exclusão
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Tem certeza que deseja excluir o chamado "{{titulo}}"? Esta ação não
                                                pode ser desfeita.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancelar</button>
                                                <button type="button" class="btn btn-danger"
                                                    onclick="excluirChamado({{id}})">
                                                    Confirmar Exclusão
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{#unless infos.length}}
            <div class="text-center py-5">
                <i class="bi bi-ticket text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Nenhum chamado encontrado</h5>
                <p class="text-muted mb-3">Não há chamados registrados no momento.</p>
                <a href="/chamados/cadastro" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Cadastrar Chamado
                </a>
            </div>
            {{/unless}}
        </div>
    </div>
</div>