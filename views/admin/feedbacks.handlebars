<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Lista de Feedbacks</h5>
                <a href="/" class="btn btn-outline-secondary back-button">Voltar</a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" style="max-width: 1200px; margin: 0 auto;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Descrição</th>
                            <th>Nota</th>
                            <th>Usuário_ID</th>
                            <th>Atendimento_ID</th>
                            <th>Técnico_ID</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each feedbacks}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{titulo}}</td>
                            <td>{{descricao}}</td>
                            <td>{{nota}}</td>
                            <td>{{cliente_id}}</td>
                            <td>{{atendimento_id}}</td>
                            <td>{{tecnico_id}}</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{id}}">
                                        <i class="bi bi-trash me-2"></i>Excluir
                                    </button>
                                </div>

                                <div class="modal fade" id="deleteModal{{id}}" tabindex="-1"
                                    aria-labelledby="deleteModalLabel{{id}}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{id}}">Confirmar Exclusão
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Tem certeza que deseja excluir o feedback "{{titulo}}"? Esta ação não
                                                pode ser desfeita.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancelar</button>
                                                <button type="button" class="btn btn-danger"
                                                    onclick="excluirFeedback({{id}})">
                                                    Confirmar Exclusão
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>