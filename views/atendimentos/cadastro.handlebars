<div>
    <div>
        <form action="/atendimentos/concluir" method="post">
            <p>{{atendimento.resumo}}</p>
            <p>{{atendimento.status}}</p>
            <label>RESUMO</label>
            <input type="text" name="resumo" required>
            <button type="submit" name="id" value="{{atendimento.id}}">Concluir</button>
        </form>
        <button type="submit" onclick="excluirAtendimento({{atendimento.id}})">Excluir</button>
    </div>
    {{#each chamados}}
        <form action="/atendimentos/cadastro" method="post">
            <h2>{{titulo}}</h2>
            <p>{{descricao}}</p>
            <p>{{status}}</p>
            <button type="submit" name="chamado_id" value="{{id}}">Atender</button>
        </form>
    {{/each}}
</div>