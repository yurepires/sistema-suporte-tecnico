<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title">Lista de Atendimentos Concluídos</h5>
                <a href="/atendimentos" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>
            
            {{#if atendimentos.length}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#ID</th>
                            <th scope="col">Resumo</th>
                            <th scope="col">Chamado</th>
                            <th scope="col" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each atendimentos}}
                        <tr>
                            <td>{{id}}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-file-text text-primary me-2"></i>
                                    {{resumo}}
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">#{{chamado_id}}</span>
                            </td>
                            <td class="text-end">
                                <a href="/atendimentos/editar/{{id}}" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil me-2"></i>Editar
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Nenhum atendimento encontrado</h5>
                <p class="text-muted mb-0">Não há registros de atendimentos no momento.</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>