<div class="dashboard-content">
  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-title">Meus Chamados</h5>
        <div>
          <a href="/" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i>Voltar</a>
          <a href="/chamados/cadastro" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Novo Chamado
          </a>
        </div>
      </div>
    </div>
  </div>

  {{#if chamados.length}}
    <div class="chamados-grid">
      {{#each chamados}}
        <div class="chamado-card">
          <div class="chamado-header">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="chamado-titulo">#{{id}} - {{titulo}}</h5>
              <span class="badge">{{status}}</span>
            </div>
          </div>
          
          <div class="chamado-body">
            <p class="chamado-descricao">{{descricao}}</p>
            
            <div class="d-flex justify-content-end gap-2 mt-3">
              <a href="/chamados/editar/{{id}}" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil me-2"></i>Editar
              </a>
              <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{id}}">
                <i class="bi bi-trash me-2"></i>Excluir
              </button>
            </div>
          </div>
        </div>

        <div class="modal fade" id="deleteModal{{id}}" tabindex="-1" aria-labelledby="deleteModalLabel{{id}}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel{{id}}">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Tem certeza que deseja excluir o chamado "{{titulo}}"?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-danger" onclick="excluirChamado({{id}})">Confirmar Exclusão</button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card">
      <div class="card-body text-center py-5">
        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
        <h5 class="mt-3">Nenhum chamado encontrado</h5>
        <p class="text-muted mb-3">Você ainda não possui chamados registrados.</p>
        <a href="/chamados/cadastro" class="btn btn-primary">
          <i class="bi bi-plus-lg me-2"></i>Criar Novo Chamado
        </a>
      </div>
    </div>
  {{/if}}
</div>