<div class="dashboard-content">
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title">Meus Feedbacks</h5>
                <a href="/feedback" class="btn btn-outline-primary">
                    <i class="bi bi-plus-lg me-2"></i>Novo Feedback
                </a>
            </div>
        </div>
    </div>

    {{#if feedbacks.length}}
    <div class="chamados-grid">
        {{#each feedbacks}}
        <div class="chamado-card">
            <div class="chamado-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="chamado-titulo">{{titulo}}</h5>
                </div>
            </div>

            <div class="chamado-body">
                <p class="chamado-descricao">{{descricao}}</p>

                <p class="text-success me-1">Nota: {{nota}}</p>

                <div class="chamado-tecnico">
                    <i class="bi bi-person-badge me-2"></i>
                    <span>Técnico: {{tecnico.nome}}</span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">Atendimento #{{id}}</small>
                    <div class="btn-group">
                        <a href="/feedback/editar/{{id}}" class="btn btn-sm btn-outline-primary"><i
                                class="bi bi-pencil"></i> Editar</a>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#deleteModal{{id}}">
                            <i class="bi bi-trash me-2"></i>Excluir
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal{{id}}" tabindex="-1" aria-labelledby="deleteModalLabel{{id}}"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel{{id}}">Confirmar Exclusão</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Tem certeza que deseja excluir este feedback?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger" onclick="excluirFeedback({{id}})">Confirmar
                            Exclusão</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-chat-square-text text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3">Nenhum feedback encontrado</h5>
            <p class="text-muted mb-3">Você ainda não enviou nenhum feedback.</p>
            <a href="/feedbacks" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Enviar Feedback
            </a>
        </div>
    </div>
    {{/if}}
</div>