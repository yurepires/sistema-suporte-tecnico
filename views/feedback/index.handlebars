<div class="dashboard-content">
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h5 class="card-title">Feedbacks</h5>
                    <p class="card-text">Avalie os atendimentos que você recebeu.</p>
                </div>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>
    </div>

    {{#if infos.length}}
    <div class="chamados-grid">
        {{#each infos}}
        <div class="chamado-card">
            <div class="chamado-header">
                <h5 class="chamado-titulo mb-0">{{titulo}}</h5>
            </div>

            <div class="chamado-body">
                <p class="chamado-descricao">{{descricao}}</p>

                <div class="chamado-tecnico">
                    <i class="bi bi-person-badge me-2"></i>
                    <span>Técnico: {{tecnico.nome}}</span>
                </div>

                <form action="/feedback/novo" method="post" class="feedback-form">
                    <div class="mb-3">
                        <label class="form-label">Título do Feedback</label>
                        <input type="text" class="form-control" name="titulo"
                            placeholder="Digite um título para seu feedback" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nota (0 a 5)</label>
                        <input type="number" class="form-control" name="nota" min="0" max="5"
                            placeholder="Avalie de 0 a 5" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descrição</label>
                        <textarea class="form-control" name="descricao" rows="3"
                            placeholder="Descreva sua experiência..." required></textarea>
                    </div>

                    <input type="hidden" name="atendimento_id" value="{{id}}">
                    <input type="hidden" name="tecnico_id" value="{{tecnico.id}}">

                    <button type="submit" class="btn btn-primary w-100">
                        Enviar Feedback
                    </button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3">Nenhum atendimento para avaliar</h5>
            <p class="text-muted mb-0">Você não possui atendimentos pendentes para avaliação.</p>
        </div>
    </div>
    {{/if}}

    <div class="text-center mt-4">
        <a href="/feedback/meusfeedbacks" class="btn btn-outline-primary">
            <i class="bi bi-chat-square-text me-2"></i>
            Ver Meus Feedbacks
        </a>
    </div>
</div>