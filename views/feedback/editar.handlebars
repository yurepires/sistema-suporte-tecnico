<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title">Editar Feedback</h5>
                <a href="/feedback/meusfeedbacks" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>

            <form action="/feedback/editar" method="post">
                <div class="row">
                    <div class="col-md-2 mb-3">
                        <label for="id" class="form-label">ID</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-hash"></i>
                            </span>
                            <input type="number" class="form-control bg-light" name="id" id="id" value="{{feedback.id}}" readonly>
                        </div>
                    </div>

                    <div class="col-md-10 mb-3">
                        <label for="titulo" class="form-label">Título</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-chat-left-text"></i>
                            </span>
                            <input type="text" class="form-control" name="titulo" id="titulo"
                                value="{{feedback.titulo}}" required placeholder="Digite o título do feedback">
                        </div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-card-text"></i>
                            </span>
                            <textarea class="form-control" name="descricao" id="descricao" rows="4" required
                                placeholder="Descreva seu feedback">{{feedback.descricao}}</textarea>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="nota" class="form-label">Nota (0-5)</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-star"></i>
                            </span>
                            <input type="number" class="form-control" name="nota" id="nota" value="{{feedback.nota}}"
                                required min="0" max="5" placeholder="Avalie de 0 a 5">
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/clientes/meusfeedbacks" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>